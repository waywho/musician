<% end %>
<div class="container">
	<h1>Contact</h1>
	<div class = "col-xs-12 col-sm-6">
		<%= simple_form_for @contact, url: refinery.contacts_send_contact_path, method: :post do |f| %>
			<%= f.input :first_name %>
			<%= f.input :surname %>
			<%= f.input :email %>
			<%= f.input :message, :class=> "message-box" %>
			<%= f.button :submit, 'Send', :class => 'btn btn-success' %>
		<% end %>
	</div>
</div>
