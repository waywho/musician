<% content_for :body_content_title do %>
  <%= @contact.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @contact.first_name %>
    </p>
  </section>
  <section>
    <h1>Surname</h1>
    <p>
      <%=raw @contact.surname %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @contact.email %>
    </p>
  </section>
  <section>
    <h1>Message</h1>
    <p>
      <%=raw @contact.message %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="contacts">
      <% @contacts.each do |contact| %>
        <li>
          <%= link_to contact.first_name, refinery.contacts_contact_path(contact) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
