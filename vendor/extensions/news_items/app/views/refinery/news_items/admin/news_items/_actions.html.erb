<ul>
  <% if ::Refinery::NewsItems::Admin::NewsItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.news_items_admin_news_items_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_news_items_admin_news_item_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::NewsItems::Admin::NewsItemsController.sortable? && ::Refinery::NewsItems::NewsItem.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.news_items_admin_news_items_path,
                     t('.reorder', what:  "News Items"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.news_items_admin_news_items_path,
                      t('.reorder_done', what: "News Items"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
