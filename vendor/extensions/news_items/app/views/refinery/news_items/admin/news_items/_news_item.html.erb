<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(news_item) -%>">
  <span class='title'>
    <%= news_item.headline %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.news_items_news_item_path(news_item), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_news_items_admin_news_item_path(news_item), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.news_items_admin_news_item_path(news_item), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: news_item.headline)}}  ) %>
  </span>
</li>
