<%= render 'refinery/admin/search_header', :url => refinery.news_items_admin_news_items_path %>
<div class='pagination_container'>
  <% if @news_items.any? %>
    <%= render 'news_items' %>
  <% else %>
    <p>
      <% if searching? %>
        <%= t('no_results', :scope => 'refinery.admin.search') %>
      <% else %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>
