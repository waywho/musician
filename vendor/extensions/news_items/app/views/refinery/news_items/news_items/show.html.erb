<% content_for :body_content_title do %>
  <%= @news_item.headline %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Headline</h1>
    <p>
      <%=raw @news_item.headline %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @news_item.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @news_item.content %>
    </p>
  </section>
  <section>
    <h1>Publish On</h1>
    <p>
      <%=raw @news_item.publish_on %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="news_items">
      <% @news_items.each do |news_item| %>
        <li>
          <%= link_to news_item.headline, refinery.news_items_news_item_path(news_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
