<% content_for :body do %>
<% end %>

    <div class="cube-portfolio container margin-bottom-60">

	<h1>Productions</h1>
	
			<div id="grid-container2" class="cbp-l-grid-agency">
				<% @productions.each do |production| %>
				<div class="cbp-item">
					<div class="cbp-caption margin-bottom-20">
						<div class="cbp-caption-defaultWrap">
							<%= image_fu production.feature_image, '400x264#', :class => 'img-responsive' %>
						</div>
						<div class="cbp-caption-activeWrap">
							<div class="cbp-l-caption-alignCenter">
								<div class="cbp-l-caption-body">
									<ul class="link-captions no-bottom-space">
										<li><%= link_to refinery.productions_production_path(production), :class => 'fancybox img-hover-v1', :"rel" => 'gallery1' do %>
												<i class="rounded-x fa fa-link"></i>
											<% end %>
										</li>
										<li><%= link_to production.feature_image.url do %>
												<i class="rounded-x fa fa-search"></i>
											<% end %>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<div class="cbp-title-dark">
						<div class="cbp-l-grid-agency-title"><%= production.title %></div>
						<div class="cbp-l-grid-agency-desc"><%= production.company %></div>
					</div>
				</div>
				<% end %>
			</div>
	</div>

<%= render '/refinery/content_page' %>

<script>
$(document).ready(function () {

	/*********************************
        init cubeportfolio
     *********************************/
    $("#grid-container2").cubeportfolio({
        layoutMode: 'grid',
        rewindNav: true,
        scrollByPage: false,
        defaultFilter: '*',
        animationType: 'slideLeft',
        gapHorizontal: 20,
        gapVertical: 20,
        gridAdjustment: 'responsive',
        mediaQueries: [{
            width: 800,
            cols: 3
        }, {
            width: 500,
            cols: 3
        }, {
            width: 320,
            cols: 1
        }],
        caption: 'zoom',
        displayType: 'lazyLoading',
        displayTypeSpeed: 100
    });

})
</script>
