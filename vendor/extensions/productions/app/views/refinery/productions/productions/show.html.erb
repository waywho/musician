<% content_for :body_content_title do %>
  <%= @production.title %>
<% end %>

<% content_for :body do %>
          <p><%= render '/refinery/content_page' %></p>
  <% end %>


    <!--=== Content Part ===-->
    <div class="container content">
      <br class="clr" />
      <div>
      <h1 class="pull-left"><%= @production.title %></h1>
        <ul class="pull-right breadcrumb">
          <li><a href="index.html">Home</a></li>
          <li><a href="">Productions</a></li>
          <li class="active"><%= @production.title %></li>
        </ul>
      </div>
      <div class="row portfolio-item margin-bottom-50">
        <!-- Carousel -->
        <div class="col-md-7">
          <div class="carousel slide carousel-v1" id="myCarousel">
            <div class="carousel-inner">
                <div class="item active">
                  <%= image_fu @production.feature_image, '757x500#', :class => 'img-responsive' %>
                  <div class="carousel-caption">
                  </div>
                </div>
              <% @production.images.each do |image| %>
                <div class="item">
                  <%= image_fu image, '757x500#', :class => 'img-responsive' %>
                </div>
              <% end %>
              
            </div>

            <div class="carousel-arrow">
              <a data-slide="prev" href="#myCarousel" class="left carousel-control">
                <i class="fa fa-angle-left"></i>
              </a>
              <a data-slide="next" href="#myCarousel" class="right carousel-control">
                <i class="fa fa-angle-right"></i>
              </a>
            </div>
          </div>
        </div>
        <!-- End Carousel -->

        <!-- Content Info -->
        <div class="col-md-5">
          <h2>Description</h2>
          <%=raw @production.description %>


          <ul class="list-unstyled">
            <li><i class="fa fa-university color-green"></i> <%=raw @production.company %></li>
            <li><i class="fa fa-calendar color-green"></i> <%=raw @production.production_date.strftime("%Y") %></li>
          </ul>
        </div>
        <!-- End Content Info -->
      </div><!--/row-->
      <% if @production.reviews.present? %>
      <div class="tag-box tag-box-v2">
        <p><%=raw @production.reviews %></p>
      </div>
      <% end %>
      


    <!-- Three Columns -->
    <div class="container content">
      <div class="text-center margin-bottom-50">
        <h2 class="title-v2 title-center">Gallery</h2>
      </div>

      <div class="row  margin-bottom-30">
        <% @production.images.each do |image| %>
        <div class="col-sm-4 sm-margin-bottom-30 thumb">
          <%= link_to image.url, :class => 'fancybox img-hover-v1', :"rel" => 'gallery1' do %> 
            <span><%= image_fu image, '400x264#', :class => 'img-responsive' %></span>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <!-- End Three Columns -->

    <!-- Recent Works -->
    <% content_for :side_body do %>
      <aside>
        <div class="owl-carousel-v1 owl-work-v1 margin-bottom-40">
          <div class="headline"><h2 class="pull-left">Recent Works<%= t('.other') %></h2>
            <div class="owl-navigation">
              <div class="customNavigation">
                <a class="owl-btn prev-v2"><i class="fa fa-angle-left"></i></a>
                <a class="owl-btn next-v2"><i class="fa fa-angle-right"></i></a>
              </div>
            </div><!--/navigation-->
          </div>

          <div class="owl-recent-works-v1">
            <% @productions.each do |production| %>
              <div class="item">
                <%= link_to refinery.productions_production_path(production) do %>
                  <em class="overflow-hidden">
                    <%= image_fu production.feature_image, '275x173.812#', :class=> 'img-responsive' %>
                  </em>
                  <span>
                    <strong><%= production.title %></strong>
                    <i><%= production.company %></i>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </aside>
    <% end %>
      <!-- End Recent Works -->
    </div><!--/container-->
    <!--=== End Content Part ===-->



  <script type="text/javascript">
    jQuery(document).ready(function() {
      App.init();
      FancyBox.initFancybox();
      StyleSwitcher.initStyleSwitcher();
    });
  </script>
