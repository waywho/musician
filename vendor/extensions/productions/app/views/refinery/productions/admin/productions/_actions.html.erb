<ul>
  <% if ::Refinery::Productions::Admin::ProductionsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.productions_admin_productions_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_productions_admin_production_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Productions::Admin::ProductionsController.sortable? && ::Refinery::Productions::Production.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.productions_admin_productions_path,
                     t('.reorder', what:  "Productions"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.productions_admin_productions_path,
                      t('.reorder_done', what: "Productions"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
